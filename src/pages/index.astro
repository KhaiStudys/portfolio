---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Khai Haidari">
  <main class="mt-24 flex flex-col gap-8">
    <div class="flex flex-col gap-4">
      <p>Hey there &#128075,</p>
      <h1 class="font-bold text-2xl leading-normal">
        I am Khairullah Haidari or you can just call me Khai!
      </h1>
      <p>Dedicated student and a passionate soccer player.</p>
    </div>
    <div class="flex gap-4 items-center">
      <a class="px-4 py-2 rounded bg-blue-400 text-white" href="/projects"
        >Work Showcase</a
      >
      <a href="/resume">View Resume</a>
    </div>
  </main>
  <section class="mt-24 flex flex-col gap-4">
    <h2 class="text-2xl font-bold">Projects</h2>
    <Card
      title="Personal Website"
      desc="The design and development process behind my personal website."
      link="/projects/personal-website"
    />
  </section>
</Layout>
