---
const { isProject = false, isBlog = false, title, desc, link } = Astro.props;
---

<a
  href={link}
  class="border-2 flex flex-col gap-2 p-6 rounded-lg hover:border-blue-500"
>
  {
    isProject && (
      <div class="flex items-center">
        <p class="uppercase font-bold text-[10px] opacity-60 px-2 py-1 rounded-md bg-yellow-400">
          #Project
        </p>
      </div>
    )
  }
  {
    isBlog && (
      <div class="flex items-center">
        <p class="uppercase font-bold text-[10px] opacity-60 px-2 py-1 rounded-md bg-slate-200">
          #Blog Post
        </p>
      </div>
    )
  }
  <h1 class="capitalize text-2xl font-bold">{title}</h1>
  <p class="opacity-60">{desc}</p>
  <p class="underline text-blue-500">Learn More</p>
</a>
